<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePlanActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增行程"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_createPlan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="請輸入行程標題"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_createPlan_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增行程起點"
        android:background="@drawable/btn_select_orange"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_createPlan_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增行程後續"
        android:background="@drawable/btn_select_orange"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginVertical="20dp"/>

    <Button
        android:id="@+id/btn_createPlan_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清空並建立新的行程"
        android:background="@drawable/btn_select_orange"
        android:layout_marginTop="50dp"/>

</LinearLayout>