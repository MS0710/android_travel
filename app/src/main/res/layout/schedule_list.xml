<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_scheduleList_lly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_scheduleList_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="31.4256公里"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_scheduleList_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/view4"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/txt_scheduleList_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="北港朝天宮"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/txt_scheduleList_content"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="@string/view4_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:maxEms="7"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>