<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#E0E0E0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/img_scheduleShort_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/view6"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/txt_scheduleShort_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="九份"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txt_scheduleShort_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#逛老街"
                        android:textColor="@color/black"
                        android:background="@color/txt_gray"
                        android:padding="5dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_scheduleShort_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#非吃不可"
                    android:textColor="@color/black"
                    android:background="@color/txt_gray"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txt_scheduleShort_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#非吃不可"
                    android:textColor="@color/black"
                    android:background="@color/txt_gray"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>