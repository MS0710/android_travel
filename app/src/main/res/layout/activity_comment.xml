<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#E0E0E0"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:background="@color/white"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/img_comment_picture"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/view6"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp">
                <TextView
                    android:id="@+id/txt_comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="九份"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/txt_comment_tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#逛老街"
                        android:textColor="@color/black"
                        android:background="@color/txt_gray"
                        android:padding="5dp"/>
                    <TextView
                        android:id="@+id/txt_comment_tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#賞夜景"
                        android:textColor="@color/black"
                        android:background="@color/txt_gray"
                        android:padding="5dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_comment_tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#非吃不可"
                    android:textColor="@color/black"
                    android:background="@color/txt_gray"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/txt_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="文化歷史 九份隸屬新北市瑞芳區......"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:maxEms="7"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/lv_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/txt_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>
        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rb_comment_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="1"
            android:stepSize="1"
            style="?attr/ratingBarStyleSmall"
            android:layout_marginTop="10dp"
            android:isIndicator="false"
            android:theme="@style/RatingBar"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#003E3E"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="2dp">
                <EditText
                    android:id="@+id/edit_comment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:hint="請留下評論"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_comment_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="送出"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_select_orange"/>

    </LinearLayout>

</RelativeLayout>